{
  "expo": {
    "name": "RideShare",
    "slug": "rideshare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rideshare",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFC107"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rideshare.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to find nearby rides and provide accurate pickup services.",
        "NSLocationAlwaysUsageDescription": "We need your location to track your ride and ensure a smooth experience.",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFC107"
      },
      "package": "com.rideshare.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#FFC107",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ]
    ]
  }
}
